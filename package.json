{
  "name": "@digitallinguistics/styles",
  "version": "0.1.0",
  "description": "A collection of DLx assets and styles",
  "homepage": "https://github.com/digitallinguistics/styles",
  "bugs": "https://github.com/digitallinguistics/styles/issues",
  "license": "MIT",
  "author": {
    "name": "Daniel W. Hieber",
    "url": "https://danielhieber.com"
  },
  "repository": "https://github.com/digitallinguistics/styles.git",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run css && npm run kss && npm run copy-files",
    "copy-files": "node build/copyFiles.js",
    "css": "lessc kss/dlx.less kss/dlx.css --clean-css --rewrite-urls=all",
    "kss": "./node_modules/.bin/kss --config kss.config.json",
    "upload": "node build/upload.js"
  },
  "engines": {
    "node": "11.x"
  },
  "files": [
    ".stylelintrc.yml",
    "components",
    "fonts",
    "globals",
    "img",
    "semantic",
    "semantic.json"
  ],
  "dependencies": {},
  "devDependencies": {
    "azure-storage": "^2.10.2",
    "eslint": "^5.9.0",
    "feather-icons": "^4.9.0",
    "flexbox-reset": "^2.4.0",
    "kss": "^3.0.0-beta.23",
    "less": "^3.9.0",
    "less-plugin-clean-css": "^1.5.1",
    "michelangelo": "^0.8.0",
    "ora": "^3.0.0",
    "recursive-readdir": "^2.2.2",
    "semantic-ui": "^2.4.2"
  }
}
